				26102021		; serial
				600			; refresh every 10 min
				300			; retry in 5 min
				2592000			; expire in 30 days
				900			; minimum 15 min
				)
		IN	NS	{{ ansible_hostname }}.{{ zone }}.
{%  for host in groups['dns-slaves'] %}
{{ "%+18s" % ("IN") }}{{ "%+8s" % ("NS") }}{{ "%+13s" % (hostvars[host]['ansible_hostname']) }}.{{ zone }}.
{% endfor %}
                IN      A       {{ ansible_host }}

